<script>
    function updateSubMenuWidth() {
        var allCategoryWidth = $(".all-category-container").width();
        var width = $("#megamenu-menu-container").width();
        $(".full-width-sub-menu").css({width: width - allCategoryWidth});
    }
   
    updateSubMenuWidth();

    $( window ).resize(function() {
        updateSubMenuWidth();
    });
    $(window).scroll(function() {
        var top = $(window).scrollTop();
        var nonFixedHeader = $("#non-fixed-header");
        var fixedHeader = $("#fixed-header");
        if (top > nonFixedHeader.position().top + nonFixedHeader.height()) {
            fixedHeader.addClass('fixed-menu');
        } else {
            fixedHeader.removeClass('fixed-menu');
        }
    });
</script>

