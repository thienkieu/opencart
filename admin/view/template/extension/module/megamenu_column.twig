{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        
          
          <form action="{{ action }}" method="post" enctype="application/json" id="form-module" class="form-horizontal">
            <div class="col-md-12">
              <div class="form-group">
                <label class="col- control-label" for="input-name">{{ entry_name }}</label>
                <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                {% if error_name %}
                <div class="text-danger">{{ error_name }}</div>
                {% endif %}
                
              </div>
              <input type="hidden" id="tree-valule" name="tree" />
            </div>
          </form>

            <hr/>

            <div id="tree-container" >
              <div class="row">
                  <div class="col-md-4">
                    <div>Menu Items</div>
                    <div id="tree"> </div>
                  </div>
                  <div class="col-md-8">
                    <div class="form-group">
                        <label for="menuName"> Menu Name</label>
                        <input type="text" name="text" class="form-control" id="menuName" placeholder="Enter menu name"/>
                    </div>
                    <div class="form-group">
                        <label for="description"> Additional Text</label>
                        <input type="text" name="description" class="form-control" id="description" placeholder="Additional text"/>
                    </div>
                    <div class="form-group">
                        <label for="menuLink">Menu Link</label>
                        <input type="text" name="href" class="form-control" id="menuLink" placeholder="Enter menu llink"/>
                    </div>

                    <div class="form-group">
                        <label for="menuStyle">Menu Style</label>
                        <input type="text" name="style" class="form-control" id="menuStyle" placeholder="Enter menu style"/>
                    </div>

                    <div class="form-group">
                        <label for="menuCss"> Menu Css</label>
                        <input type="text" name="css"  class="form-control" id="menuCss" placeholder="Enter menu css"/>
                    </div>

                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="entry_icon">{{ entry_icon }}</label>
                      <div class="table-responsive col-sm-10">
                        <table class="table table-striped table-bordered table-hover">
                          <tbody>
                            <tr>
                              <td class="text-left"><a href="" id="icon-image" data-toggle="image" class="img-thumbnail"><img src="" alt="" title="" data-placeholder="" /></a>
                                <input type="hidden" name="icon" value="{{ icon }}" id="input-icon" /></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>

                    <div class="checkbox">
                      <label><input type="checkbox" name="displayColumn"  id="displayColumn"> Display multi column</label>
                    </div>

                    <button type="button" class="btn btn-success" id="btn-add-children">Add Children</button>
                    <button type="button" class="btn btn-success" id="btn-update-content">Update Content</button>
                    <button type="button" class="btn btn-danger" id="btn-remove-children">Remove Children All</button>
                  </div>
                  
              </div>
            </div>


          
        
      </div>
    </div>
  </div>
</div>

<script type="text/javascript"><!--
var treeData  = '{{tree}}';
if(!treeData ) {
  treeData = [];
} else {
  treeData = JSON.parse(atob(treeData));
}

var tree = new TreeView('#tree', treeData, $("#tree-container"), $("#tree-valule"));
tree.render();
$("#btn-add-children").on('click', tree.addChidren);
$("#btn-remove-children").on('click', tree.removeChildren);
$("#btn-update-content").on('click', tree.updateNodeContent);

//--></script> 

{{ footer }}